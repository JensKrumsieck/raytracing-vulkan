<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:RaytracingVulkan.UI.ViewModels"
             xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RaytracingVulkan.UI.Controls.ButtonStrip"
             x:DataType="viewModels:MainViewModel">
    <StackPanel Height="25" Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="BtnPlay" Click="BtnPlay_OnClick" Classes.Running="{Binding IsRunning, Mode=TwoWay}">
            <Button.Styles>
                <Style Selector="Button.Running">
                    <Setter Property="Background" Value="{StaticResource ToggleButtonBackgroundChecked}"></Setter>
                    <Setter Property="BorderBrush" Value="{StaticResource ToggleButtonBorderBrushChecked}" />
                    <Setter Property="Foreground" Value="{StaticResource ToggleButtonForegroundChecked}" />
                </Style>
            </Button.Styles>
            <avalonia:Icon Value="fa-play" />
        </Button>
        <Button Click="BtnStop_OnClick">
            <avalonia:Icon Value="fa-stop" />
        </Button>
    </StackPanel>
</UserControl>